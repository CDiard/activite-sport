{% extends 'base.html.twig' %}

{% block title %}SUAPS - Choisir son Équipe{% endblock %}

{% block body %}
<section class="section-title">
    <h1>*TITRE en gras*</h1>
    <p class="date-now">{{ "now"|date("d/m/Y") }}</p>
</section>

<p class="choose-team">Bonjour <strong>*joueur*</strong>, choisissez votre équipe</p>

<form action="" method="post">
    <div class="team_wrapper">
        <ul>
            <li>
                <label for="canard">
                    <div class="team_title">
                        <h2>Les canards</h2>
                    </div>
                    <div class="team_content">
                        <div class="team_content_inner">
                            <div class="left">
                                <ul>
                                    <li>Chloé</li>
                                    <li>Benjamin</li>
                                </ul>
                            </div>
                            <div class="right">
                                <input id="canard" type="radio" name="team" value="canard">
                                <div class="radio-appearance"></div>
                                
                            </div>    
                        </div>
                    </div>
                </label>
            </li>
            <li>
                <label for="sportif">
                    <div class="team_title">
                        <h2>Les sportifs</h2>
                    </div>
                    <div class="team_content">
                        <div class="team_content_inner">
                            <div class="left">
                                <ul>
                                    <li>Lucie</li>
                                </ul>
                            </div>
                            <div class="right">
                                <input id="sportif" type="radio" name="team" value="sportif">
                                <div class="radio-appearance"></div>
                                
                            </div>    
                        </div>
                    </div>
                </label>
            </li>
        </ul>
    </div>
</form>

    <h1>Les équipes</h1>
    <section class="section-input">
        {{ form_start(chooseTeamForm) }}
        <div class="input-scroll">
            {% for team in chooseTeamForm.team.children %}
                {{ form_widget(team) }}
                {{ team.vars.label|capitalize }}
                {% for key, player in allPlayers %}
                    {% if player.team.id == team.vars.value %}
                        <p>{{ player.username|capitalize }}</p>
                    {% endif %}
                {% endfor %}
            {% endfor %}
            {{ form_widget(chooseTeamForm.save, { 'label': 'Valider' }) }}
        </div>
        {{ form_end(chooseTeamForm) }}
    </section>
{% endblock %}
